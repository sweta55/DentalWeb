@model DentalWeb.Models.Login

@{
    /**/

    ViewBag.Title = "Login";
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="col-md-offset-4 col-md-4 container-fluid " style="margin-top: 50px">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="text-center"> Welcome to Model Dental Clinic </h1>
                @if (ViewBag.Error != null)
                {
                    <h3 id="loginError" class="text-danger text-center">@ViewBag.Error</h3>
                }
            </div>
            <div class="panel-body">

                <div style="height:30px; "></div>
                <div class="form-group">
                    <label>
                        Name :
                    </label>
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control",@placeholder="Username" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="password"> Password : </label>
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder="Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div style="text-align: center; ">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>

            </div>
        </div>
    </div>


}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>
    $('#loginError').fadeOut(5000);
</script>

