@{
    ViewBag.title = "Google Map";
}
<div class="container">
    <h3>@ViewBag.title</h3>
</div>
<style>
    /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
    #map {
        height: 500px;
        width : 800px;
    }

</style>
<br/>
<div class="container">
    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 27.705823, lng: 85.312922},
          zoom: 18
          });
        var marker = new google.maps.Marker({
            position: { lat: 27.705823, lng: 85.312922},
            map: map
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=
AIzaSyCgYvsfr97a0l2FTh3CX6bHyOU9VdhObN0
&callback=initMap"
            async defer></script>
</div>